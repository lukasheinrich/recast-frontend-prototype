{
	"padding": 5,
	"width": 350,
	"autosize": "pad",
	"axes": [{
		"domain": false,
		"scale": "xscale",
		"grid": true,
		"orient": "bottom",
		"title": {
			"signal": "abcissa"
		}
	}, {
		"domain": false,
		"scale": "yscale",
		"grid": true,
		"orient": "left",
		"title": {
			"signal": "ordinate"
		}
	}],
	"legends": [{
		"fill": "ClsHeat",
		"type": "gradient",
		"orient": "bottom"
	}],
	"signals": [{
		"bind": {
			"input": "select",
			"options": null
		},
		"name": "abcissa",
		"value": null
	},
	 {
		"bind": {
			"input": "select",
			"options": null
		},
		"name": "ordinate",
		"value": null
	}, 

    {
		"bind": {
			"input": "select",
			"options": ["ClsHeat","ClsThr"]
		},
		"name": "colormap",
		"value": "ClsHeat"
	},

	{
		"bind": {
			"input": "checkbox"
		},
		"name": "pointRequests",
		"value": true
	}, {
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10
      },
      "name": "explode",
      "value": 0
    }

	],
	"marks": [{
		"encode": {
			"hover": {},
			"update": {
				"opacity": [{
					"test": "pointRequests",
					"value": 1.0
				}, {
					"value": 0.0
				}],
				"fill": [{
					"test": "datum.avg_obs != null && datum.avg_exp != null",
					"field": "avg_obs",
					"scale": {"signal":"colormap"}				
				}, {
					"value": "grey"
				}]
			},
			"enter": {
				"strokeWidth": {
					"value": 2
				},
				"xfocus": {
					"field": {
						"signal": "abcissa"
					},
					"scale": "xscale"
				},
				"shape": {
					"value": "circle"
				},
				"yfocus": {
					"field": {
						"signal": "ordinate"
					},
					"scale": "yscale"
				},
				"size": {
					"value": 100
				}
			}
		},
		"from": {
			"data": "pointrequests"
		},
		"type": "symbol",
		"name": "pointmarks",
		"transform": [{
			"static": false,
			"type": "force",
			"forces": [{
				"force": "collide",
                "radius": {"signal": "explode"}
			}, {
				"x": "xfocus",
				"strength": 1,
				"force": "x"
			}, {
				"y": "yfocus",
				"strength": 1,
				"force": "y"
			}],
			"iterations": 50
		}]
	}],
	"$schema": "https://vega.github.io/schema/vega/v3.0.json",
	"scales": [
	{
		"domain": [0.0001,1],
		"name": "ClsHeat",
		"type": "log",
        "range": "heatmap"
	},
	{
	  "name": "ClsThr",
	  "type": "threshold",
	  "domain": [0, 0.05, 1.0],
	  "range": ["blue", "red", "green","blue"]
	},
	{
		"domain": {
			"field": {
				"signal": "abcissa"
			},
			"data": "pointrequests"
		},
		"name": "xscale",
		"zero": false,
		"range": "width",
		"type": "linear",
		"round": true,
		"nice": true
	}, {
		"domain": {
			"field": {
				"signal": "ordinate"
			},
			"data": "pointrequests"
		},
		"name": "yscale",
		"zero": false,
		"range": "height",
		"type": "linear",
		"nice": true
	}],
	"data": [
	    {
	      "name": "pointrequests_with_results",
	      "source": "pointrequests",
	      "transform": [
	        {
	          "type": "filter",
	          "expr": "datum.avg_obs != null && datum.avg_exp != null"
	        }
	      ]
	    }
	],
	"height": 350
}